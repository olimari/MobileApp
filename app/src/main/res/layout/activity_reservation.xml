<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_gradient"
    android:fillViewport="false"
    android:orientation="vertical"
    tools:context=".ReservationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="82dp">

            <ImageButton
                android:id="@+id/buttonGoBack2"
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_arrow" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="43dp"
                android:layout_height="41dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_suitcase" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:text="Moje rezerwacje"
                android:textColor="@color/white"
                android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white_background"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="1906dp">

                <TextView
                    android:id="@+id/tvNumberOfRes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="Liczba rezerwacji: 0"
                    android:textSize="30sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvReservationStatus"
                    android:layout_width="323dp"
                    android:layout_height="197dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text="Brak rezerwacji."
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.494"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvNumberOfRes" />

                <TextView
                    android:id="@+id/tvReservationStatus2"
                    android:layout_width="323dp"
                    android:layout_height="197dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvReservationStatus" />

                <TextView
                    android:id="@+id/tvReservationStatus3"
                    android:layout_width="323dp"
                    android:layout_height="197dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvReservationStatus2" />

                <TextView
                    android:id="@+id/tvReservationStatus4"
                    android:layout_width="323dp"
                    android:layout_height="197dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvReservationStatus3" />

                <TextView
                    android:id="@+id/tvReservationStatus5"
                    android:layout_width="323dp"
                    android:layout_height="197dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvReservationStatus4" />

                <TextView
                    android:id="@+id/tvReservationStatus6"
                    android:layout_width="323dp"
                    android:layout_height="197dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvReservationStatus5" />

                <TextView
                    android:id="@+id/tvReservationStatus7"
                    android:layout_width="323dp"
                    android:layout_height="197dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvReservationStatus6" />

                <TextView
                    android:id="@+id/tvReservationStatus8"
                    android:layout_width="323dp"
                    android:layout_height="197dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvReservationStatus7" />

                <TextView
                    android:id="@+id/tvReservationStatus9"
                    android:layout_width="323dp"
                    android:layout_height="197dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvReservationStatus8" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:background="@drawable/bottom_bar_gradient">

                <ImageButton
                    android:id="@+id/buttonProfile2"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_marginEnd="40dp"
                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/buttonReservation2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.529"
                    app:srcCompat="@drawable/ic_user" />

                <ImageButton
                    android:id="@+id/buttonHome2"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_marginStart="40dp"
                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.018"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.47"
                    app:srcCompat="@drawable/ic_home" />

                <ImageButton
                    android:id="@+id/buttonSearch2"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_marginStart="45dp"
                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/buttonHome2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.529"
                    app:srcCompat="@drawable/ic_search_white" />

                <ImageButton
                    android:id="@+id/buttonReservation2"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_marginStart="52dp"
                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/buttonSearch2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_suitcase" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>